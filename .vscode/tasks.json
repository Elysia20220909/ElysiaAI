{
  "version": "2.0.0",
  "tasks": [
    // ğŸš€ Development Tasks
    {
      "label": "ğŸš€ Dev Server",
      "type": "shell",
      "command": "bun run dev",
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "isBackground": true
    },
    {
      "label": "ğŸ”¨ Build",
      "type": "bun",
      "script": "webpack --config webpack.config.js --mode=production",
      "problemMatcher": ["$tsc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Production build with webpack"
    },
    // ğŸ§ª Testing Tasks
    {
      "label": "ğŸ§ª Run Tests",
      "type": "shell",
      "command": "bun test",
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "ğŸ§ª Run Tests (Watch)",
      "type": "shell",
      "command": "bun test --watch",
      "problemMatcher": [],
      "isBackground": true,
      "group": "test"
    },
    // ğŸ¨ Code Quality
    {
      "label": "ğŸ¨ Format Code",
      "type": "shell",
      "command": "bun run format",
      "problemMatcher": []
    },
    {
      "label": "ğŸ” Lint Code",
      "type": "shell",
      "command": "bun run lint",
      "problemMatcher": []
    },
    {
      "label": "ğŸ”§ Fix Issues",
      "type": "shell",
      "command": "bun run fix",
      "problemMatcher": []
    },
    // ğŸ³ Docker Tasks
    {
      "type": "docker-build",
      "label": "docker-build",
      "platform": "node",
      "dockerBuild": {
        "dockerfile": "${workspaceFolder}/Dockerfile",
        "context": "${workspaceFolder}",
        "pull": true
      }
    },
    {
      "type": "docker-run",
      "label": "docker-run: release",
      "dependsOn": ["docker-build"],
      "platform": "node"
    },
    {
      "type": "docker-run",
      "label": "docker-run: debug",
      "dependsOn": ["docker-build"],
      "dockerRun": {
        "env": {
          "DEBUG": "*",
          "NODE_ENV": "development"
        }
      },
      "node": {
        "enableDebugging": true
      }
    },
    {
      "label": "ğŸ³ Docker Build Production",
      "type": "shell",
      "command": "docker build -f Dockerfile.production -t elysia-ai:latest .",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "ğŸ³ Docker Compose Up",
      "type": "shell",
      "command": "docker-compose up -d",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "ğŸ³ Docker Compose Down",
      "type": "shell",
      "command": "docker-compose down",
      "problemMatcher": []
    },
    {
      "label": "ğŸ³ Docker Logs",
      "type": "shell",
      "command": "docker-compose logs -f",
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    // ğŸ Python Tasks
    {
      "label": "ğŸ Python FastAPI Server",
      "type": "shell",
      "command": "python python/fastapi_server.py",
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    // ğŸ“¦ Maintenance
    {
      "label": "ğŸ“¦ Install Dependencies",
      "type": "shell",
      "command": "bun install",
      "problemMatcher": []
    },
    {
      "label": "ğŸ§¹ Clean Build",
      "type": "shell",
      "command": "Remove-Item -Recurse -Force dist,node_modules -ErrorAction SilentlyContinue; bun install; bun run build",
      "problemMatcher": []
    }
  ]
}
