{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ğŸš€ Debug Elysia Server (Bun)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "bun",
      "runtimeArgs": ["run", "--watch", "src/index.ts"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "ğŸ§ª Debug Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "bun",
      "runtimeArgs": ["test", "${file}"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "ğŸ§ª Debug All Tests",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "bun",
      "runtimeArgs": ["test"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "ğŸ”¨ Debug Build",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "bun",
      "runtimeArgs": ["run", "build"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "ğŸ³ Debug Docker Container",
      "type": "docker",
      "request": "launch",
      "preLaunchTask": "docker-run: debug",
      "platform": "node"
    },
    {
      "name": "ğŸ Debug Python FastAPI",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/python/fastapi_server.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/python",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/python"
      }
    }
  ],
  "compounds": [
    {
      "name": "ğŸ¯ Debug Full Stack",
      "configurations": [
        "ğŸš€ Debug Elysia Server (Bun)",
        "ğŸ Debug Python FastAPI"
      ],
      "stopAll": true
    }
  ]
}
