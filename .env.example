# Elysia AI 環境変数設定例

# Milvus接続設定（オプション）
# USE_MILVUS=true にすると Milvus を使用します
USE_MILVUS=false
MILVUS_URI=http://localhost:19530
MILVUS_TOKEN=user:password

# Ollama設定
OLLAMA_HOST=http://127.0.0.1:11434
OLLAMA_MODEL=llama3.2

# FastAPI設定
FASTAPI_HOST=127.0.0.1
FASTAPI_PORT=8000

# ElysiaJS設定
ELYSIA_PORT=3000

# セキュリティ設定（必須: 本番環境では必ず変更してください）
# JWT_SECRET: 32文字以上のランダム文字列を推奨 (例: openssl rand -hex 32)
JWT_SECRET=CHANGE_ME_TO_STRONG_RANDOM_SECRET_32CHARS_OR_MORE
# AUTH_PASSWORD: ログイン用パスワード (8文字以上)
AUTH_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD_8CHARS_MINIMUM

# RAG API エンドポイント
RAG_API_URL=http://127.0.0.1:8000/rag
RAG_TIMEOUT=5000

# レート制限 (1分間あたり最大リクエスト数)
RATE_LIMIT_RPM=60

# CORS許可オリジン (カンマ区切り)
ALLOWED_ORIGINS=http://localhost:3000
