{
  "name": "elysia-wasm",
  "version": "1.0.0",
  "description": "WebAssembly bindings for Elysia AI",
  "main": "pkg/elysia_wasm.js",
  "types": "pkg/elysia_wasm.d.ts",
  "files": ["pkg/"],
  "scripts": {
    "build": "wasm-pack build --target bundler --release",
    "build:web": "wasm-pack build --target web --release",
    "build:nodejs": "wasm-pack build --target nodejs --release",
    "dev": "wasm-pack build --dev",
    "test": "wasm-pack test --headless --firefox",
    "serve": "python3 -m http.server 8000"
  },
  "keywords": ["wasm", "webassembly", "elysia", "text-processing"],
  "author": "Elysia AI",
  "license": "AGPL-3.0-or-later",
  "devDependencies": {
    "wasm-pack": "^1.3"
  }
}
