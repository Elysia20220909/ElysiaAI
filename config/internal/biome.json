{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"include": ["src/**/*.ts", "*.ts", "tests/**/*.ts"],
		"ignore": [
			"node_modules",
			"dist",
			".venv",
			"*.log",
			"mobile",
			"desktop",
			"native",
			"cuda",
			"python",
			"temp",
			"src/**/*.d.ts",
			"*.d.ts"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"organizeImports": {
		"enabled": true
	}
}
