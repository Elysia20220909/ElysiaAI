{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"root": true,
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": [
			"**/src/**/*.ts",
			"**/*.ts",
			"**/tests/**/*.ts",
			"!**/node_modules",
			"!**/dist",
			"!**/.venv",
			"!**/*.log",
			"!**/mobile",
			"!**/desktop",
			"!**/native",
			"!**/cuda",
			"!**/python",
			"!**/temp",
			"!**/src/**/*.d.ts",
			"!**/*.d.ts"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } }
}
